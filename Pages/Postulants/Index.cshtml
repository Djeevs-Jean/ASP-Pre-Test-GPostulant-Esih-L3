@page
@model MyApp.Namespace.IndexModel
@{
    ViewData["Title"] = "Listing Postulant";
}

<div class="container">

    <div class="row">
        <div class="col-md-4">
            <a asp-page="Create" class="btn btn-primary">Create Postulant</a>
        </div>
    </div>

    <hr>

    <h2 class="display2 d-flex center mb-4">Liste Des Postulants</h2>

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Phenom</th>
                    <th>Sexe</th>
                    <th>Classe</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.postulantsListe)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Nom)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Prenom)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Sexe)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Classe)
                        </td>

                        <td>
                            <a asp-page="./Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                        </td>

                        <td>
                            <a asp-page="./Detail" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                        </td>

                        <td>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>