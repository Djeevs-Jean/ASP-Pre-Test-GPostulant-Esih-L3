@page "{id:int}"
@model MyApp.Namespace.UpdateModel
@{
}


<div class="container">
    <div class="row">
        <h2 class="display-2">
            Update Postulant
        </h2>
    </div>

    <div class="row">
        <div class="form-group">
            <form action="" method="post">
                <label for="" class="check-for-label">Nom</label>
                <input type="text" name="Nom" id="Nom" asp-for="postulantUpdate.Nom" class="form-control">

                <label for="" class="label-for-check">Prenom</label>
                <input type="text" name="Prenom" id="Prenom"  asp-for="postulantUpdate.Prenom" class="form-control">

                <label for="" class="label-for-check">Sexe</label>
                <select name="Sexe" id="Sexe" asp-for="postulantUpdate.Sexe" class="form-select">
                    <option selected>------------------------</option>
                    <option value="Masculin">Masculin</option>
                    <option value="Feminin">Feminin</option>
                </select>

                <label for="" class="label-for-check">Classe</label>
                <input type="text" name="Classe" id="Classe" asp-for="postulantUpdate.Classe" class="form-control">

                <button type="submit" class="btn btn-primary mt-4">Update</button>
            </form>
            
        </div>
    </div>
</div>